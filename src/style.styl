html,
body {
  font-size: 10px;
  background-color: #BDD1DE;
}
header {
  background: linear-gradient(20deg, #f5f5f5 0%,#ffffff 100%);
  height: 20rem;
}
header::after {
  position: absolute;
  top: 45px;
  left: 145px;
  border-radius: 50%;
  width: 150px;
  height: 150px;
  background-color: linear-gradient(200deg, #f5f5f5 0%,#ffffff 100%);
  z-index: 1;
  content: '';
}
h1 {
  font-family: 'Londrina Solid';
  font-size: 60px;
}