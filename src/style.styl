clouds = {size: 4rem,  x: 3.2rem,   y: -2rem},
         {size: 10rem, x: 5.2rem,   y: -7.6rem},
         {size: 3rem,  x: 12.7rem,  y: 0rem},
         {size: 15rem, x: 13.1rem,  y: -11rem},
         {size: 6rem,  x: 26.2rem,  y: -3rem},
         {size: 6rem,  x: 31.8rem,  y: -3rem},
         {size: 3rem,  x: 37.1rem,  y: -1rem},
         {size: 6rem,  x: 38.2rem,  y: -5rem}

split = 710px;
split-tiny = 710px;

*
  box-sizing: border-box;

html
body
  font-size: 10px;
  background-color: #BDD1DE;

header
  overflow: hidden;
  height: 20rem;
  background: whitesmoke;
  text-align: center;
  @media (max-width: split)
    height: 26rem;

$header-child
  position: relative;
  display: inline-block;
  vertical-align: top;

#rainbow
  @extend $header-child;
  display: inline-block;
  position: relative;
  top: -1.5rem;
  left: -6.8rem;
  z-index: 9000;
  @media (max-width: split)
    width: 9rem;

h1
  @extend $header-child;
  color: #6680c2;
  font-family: 'Londrina Solid';
  font-size: 7.9rem;
  margin-top: 7rem;
  margin-left: -7rem;
  z-index: 10000;
  @media (max-width: split)
    margin-left: -9.3rem;
    margin-top: 16rem;

.cloud-container
  margin-left: -82rem;
  @media (max-width: split)
    margin-left: -48rem;

.clouds
  position: relative;
  overflow: hidden;
  height: 100rem;
  margin-left: 50%;

for cloud, i in clouds
  .cloud:nth-child({i + 1})
    position: absolute;
    top: cloud.y;
    left: cloud.x;
    border-radius: 50%;
    width: cloud.size;
    height: cloud.size;
    background: whitesmoke;